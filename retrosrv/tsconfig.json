{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"typeRoots": ["src/types", "node_modules/@types"],
		"sourceMap": true,
		"skipLibCheck": true
	},
	"exclude": ["./node_modules"],
	"ts-node": {
		"swc": true
	}
}
