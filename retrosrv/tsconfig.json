{
	"compilerOptions": {
		"lib": ["ES2022"],
		"target": "ES2022",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"outDir": "./out",
		"rootDir": "./src",
		"typeRoots": ["node_modules/@types", "./src"],
		"sourceMap": true,
		"skipLibCheck": true,
		"moduleResolution": "node"
	},
	"exclude": ["./node_modules"],
	"ts-node": {
		"swc": true
	}
}
